<resources>
    <!-- Base application theme. -->
    <style name="Theme.WallPaper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background_light</item>
        <item name="colorPrimaryVariant">@color/main_background_light</item>
        <item name="colorOnPrimary">@color/main_background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="fontFamily">@font/actor</item>
        <item name="colorSecondaryVariant">@color/background_light</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorOnSecondary">@color/main_background_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">10sp</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Tablayout" parent="Theme.AppCompat">
        <item name="backgroundColor">@color/main_background_light</item>
    </style>

    <style name="Theme.WallPaper.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ThemeCustom.TabLayout" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/main_background_light</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0.1sp</item>
        <item name="android:alpha">0.0</item>
        <item name="fontFamily">@font/actor</item>
        <item name="actionTextColorAlpha">0</item>
    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabGravity">center</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Image">
        <item name="android:gradientRadius">@dimen/_10ssp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>
    <style name="splashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/error_photo</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:statusBarColor">@color/main_background</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>


    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Demo.BottomSheetDialog</item>
    </style>

    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>

    </style>

    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="colorSurface">@color/gray</item>
        <item name="android:textAppearance">@style/TextStyle</item>
    </style>
    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>


</resources>