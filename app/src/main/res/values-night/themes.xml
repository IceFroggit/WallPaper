<resources>
    <!-- Base application theme. -->
    <style name="Theme.WallPaper" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_background</item>
        <item name="colorPrimaryVariant">@color/main_background</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/background</item>

        <item name="colorSecondaryVariant">@color/background</item>
        <item name="colorTertiary">@color/gray</item>
        <item name="colorOnSecondary">@color/main_background</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/actor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="hideOnScroll">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Tablayout" parent="Theme.AppCompat">
        <item name="backgroundColor">@color/main_background</item>
    </style>

    <style name="ThemeCustom.TabLayout" parent="Theme.MaterialComponents.Light" />

    <style name="Theme.WallPaper.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/actor</item>
        <item name="hideOnScroll">true</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/error_photo</item>
        <item name="fontFamily">@font/actor</item>
        <item name="android:statusBarColor">@color/main_background</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
    </style>

</resources>